{
  "name": "stylite",
  "version": "0.2.0",
  "description": "A super lightweight style editor. Apply any styles you want to any site.",
  "main": "src/manifest.json",
  "repository": "git@github.com:iansinnott/stylite.git",
  "author": "Ian Sinnott <ian@iansinnott.com>",
  "license": "MIT",
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "babel-preset-es2015",
      "babel-preset-stage-0"
    ]
  },
  "scripts": {
    "test": "NODE_ENV=test ava",
    "lint": "eslint src",
    "watch": "webpack --config ./webpack.config.js --watch",
    "prebuild": "./prebuild.sh",
    "build": "NODE_ENV=production webpack --config ./webpack.config.js",
    "postbuild": "./postbuild.sh"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.1.0",
    "eslint-config-zen": "^2.0.4",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-react": "^7.1.0",
    "html-webpack-plugin": "^2.28.0",
    "rimraf": "^2.6.1",
    "style-loader": "^0.18.2",
    "webpack": "^2.6"
  },
  "dependencies": {
    "codemirror": "^5.27.2"
  }
