{
  "manifest_version": 2,
  "name": "Stylite",
  "description": "Quickly customize styling on any website",
  "version": "0.1",
  "icons": {
    "128": "icon128x128.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "match_about_blank": true,
      "js": ["content.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icon19x19.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "tabs", "<all_urls>",
    "storage",
    "unlimitedStorage"
  ]
}
